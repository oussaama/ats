<div id="EditProduct" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title text-light">Modify Product</h4>
                <button type="button" class="close text-light" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form ng-submit="update(editProduct)">
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationServer01">Name</label>
                            <input type="text" class="form-control" id="validationServer01" placeholder="Name" ng-model="editProduct.productName"  required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationServer02">Price</label>
                            <input type="text" class="form-control" id="validationServer02" placeholder="Price" ng-model="editProduct.basePrise" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationServer03">Category</label>
                            <input type="text" class="form-control" id="validationServer03" placeholder="Category" ng-model="editProduct.category" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationServer04">Brand</label>
                            <input type="text" class="form-control is-invalid" id="validationServer04" placeholder="Brand" ng-model="editProduct.brand"required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationServer05">Material</label>
                            <input type="text" class="form-control is-invalid" id="validationServer05" placeholder="Material" ng-model="editProduct.productMaterial"required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationServer06">Delivery</label>
                            <input type="text" class="form-control is-invalid" id="validationServer06" placeholder="Delevery" ng-model="editProduct.Delivery" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationServer07">Details</label>
                            <input type="hidden"  ng-model="editProduct.id">
                            <input type="hidden"  ng-model="editProduct.imageUrl">
                            <textarea class="form-control is-invalid" id="validationServer07" ng-model="editProduct.Details"></textarea>
                        </div>
                    </div>
                    <button class="btn btn-danger float-right" type="submit" ng-click="update(product)">Submit form</button>
                </form>
            </div>
        </div>

    </div>
</div>
