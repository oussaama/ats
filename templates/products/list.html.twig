<h2 class="text-center title-page m-b-30">Product List</h2>
<div class="m-2">
    <div class="row">
        <div class="col-2">
            <select class="form-control custom-select" ng-model="limitProduct" ng-change="limitPagination()">
                <option value="20" selected="selected">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
        <div class="col-7">
            <select class="form-control custom-input" ng-model="categoryProduct" ng-change="filterPagination()">
                <option value="">Choisir Categorie</option>
                <option ng-repeat="c in categories" value="{$ c.category $}">{$ c.category $}
                </option>
            </select>
        </div>
        <div class="col-3">
            <span class="btn btn-danger float-right" data-toggle="modal" data-target="#AddProduct"><i class="fa fa-plus" aria-hidden="true"></i> Add</span>
        </div>
    </div>
</div>
<div class="table100 ver4 m-b-110">
    <table data-vertable="ver4">
        <thead>
        <tr class="row100 head">
            <th class="text-center" ng-click="productFilter('id')">
                Id
                <span class="fa fa-sort-amount-asc" ng-if="(typeId)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeId)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('productName')">
                Name
                <span class="fa fa-sort-amount-asc" ng-if="(typeName)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeName)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('basePrise')">
                Price
                <span class="fa fa-sort-amount-asc" ng-if="(typePrice)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typePrice)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('category')">Category
                <span class="fa fa-sort-amount-asc" ng-if="(typeCategory)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeCategory)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('brand')">Brand
                <span class="fa fa-sort-amount-asc" ng-if="(typeBrand)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeBrand)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('productMaterial')">Material
                <span class="fa fa-sort-amount-asc" ng-if="(typeMaterial)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeMaterial)"></span>
            </th>
            <th class="text-center" ng-click="productFilter('Delivrey')">Delivery
                <span class="fa fa-sort-amount-asc" ng-if="(typeDelivery)"></span>
                <span class="fa fa-sort-amount-desc" ng-if="!(typeDelivery)"></span>
            </th>
            <th class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>
        <tr class="row100" ng-repeat="product in products|filter:filterGlobal">
            <td class="text-center">{$ product.id $}</td>
            <td class="text-center">{$ product.productName $}</td>
            <td class="text-center">{$ product.basePrise $}</td>
            <td class="text-center">{$ product.category $}</td>
            <td class="text-center">{$ product.brand $}</td>
            <td class="text-center">{$ product.productMaterial $}</td>
            <td class="text-center">{$ product.Delivery | date : format : timezone $}</td>
            <td class="text-center">
                <span class="btn btn-danger" ng-click="detailProduct(product.id)" data-toggle="modal" data-target="#DetailProduct"><i class="fa fa-bars" aria-hidden="true"></i></span>
                <span class="btn btn-danger" ng-click="loadProduct(product)" data-toggle="modal" data-target="#EditProduct"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
            </td>
        </tr>
        </tbody>
    </table>
</div>

<div class="navigation">
    <ul class="pagination float-right">
        <li ng-class="{'disabled page-item': noPrev()}"><a class="page-link" ng-click="prevPage(page)">Previous</a>
        </li>
        <li ng-class="{'active page-item': isActive(p)}" ng-repeat="p in pages"><a class="page-link" ng-click="getPage(p)">{$ p $}</a>
        </li>
        <li ng-class="{'disabled page-item': noNext()}"><a class="page-link" ng-click="nextPage(page)">Next</a>
        </li>
    </ul>
</div>